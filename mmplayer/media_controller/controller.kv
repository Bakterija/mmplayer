#: import LabelButton widgets.labelbutton.LabelButton

<MediaButton>:
    # font_size: int(app.mlayout.button_height * 0.6)
    font_size: int(self.height * 0.6)
    Label:
        size_hint: 0.1, 1
        font_size: root.font_size
        text: str(root.index) if root.queue_view else str(root.id)

    Label:
        font_size: root.font_size
        text: root.text
        size_hint: 0.8, 1
        text_size: self.size[0], None
        shorten: True
        padding_x: 20
    Label:
        font_size: root.font_size
        text: root.duration_readable if root.duration != -1 else 'N/A'
        size_hint: 0.1, 1
        text_size: self.size[0], None

<MediaRecycleviewBase>:
    AppRecycleBoxLayout:
        id: box
        orientation: 'vertical'
        size_hint: None, None
        height: self.minimum_height
        width: self.parent.width - self.parent.bar_width
        default_size: None, app.mlayout.button_height
        default_size_hint: 1, None
        spacing: app.mlayout.spacing
