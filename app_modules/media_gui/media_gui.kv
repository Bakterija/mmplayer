#:import recc23 app_modules.media_gui.labelbutton.LabelButton

<Media_Button>:
    size_hint: 1, 1
    text: self.name
    pstate: 'default'
    bg_color: [0.20, 0.20, 0.40, 1]
    bg_hover: [0.5, 0.5, 0.5, 1]
    bg_default: [0.20, 0.20, 0.40, 1]
    bg_playing: [0.5, 0.15, 0.3, 1]
    bg_disabled: [0.2, 0.2, 0.2, 1]
    bg_error: [1, 0.3, 0.3, 1]
    bg_folder: [0.2, 0.2, 0.2, 1]
    bg_colors: {'default': self.bg_default, 'playing': self.bg_playing, 'playing-stopped': self.bg_default, 'disabled': self.bg_disabled, 'error': self.bg_error, 'folder': self.bg_folder, 'hover': self.bg_hover}
    # on_release: root.press(root)
    LabelButton:
        text: root.text
        size_hint: 0.9, 1
        text_size: self.size[0], self.text_size[1]
        padding_x: 20
        canvas.before:
            Color:
                rgba: root.bg_color
            Rectangle:
                pos: root.pos
                size: root.size
        # on_release: root.press(root)


<MRV_Base>:
    scroll_type: ['bars', 'content']
    scroll_wheel_distance: dp(114)
    bar_width: dp(10)
    data: []
    RecycleBoxLayout:
        id: rvbox
        orientation: 'vertical'
        size_hint: None, None
        height: self.minimum_height
        width: self.parent.width
        default_size: None, cm(1)
        default_size_hint: 1, None
        spacing: '2dp'


