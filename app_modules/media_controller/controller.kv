#: import LabelButton app_modules.widgets_integrated.labelbutton.LabelButton

<MediaButton>:
    text: self.name
    pstate: 'default'
    bg_color: 0.20, 0.20, 0.40, 1
    bg_hover: 0.5, 0.5, 0.5, 1
    bg_default: 0.20, 0.20, 0.40, 1
    bg_playing: 0.5, 0.15, 0.3, 1
    bg_disabled: 0.2, 0.2, 0.2, 1
    bg_error: 0.1, 0.05, 0.05, 1
    bg_folder: 0.2, 0.2, 0.2, 1
    bg_colors: {'default': self.bg_default, 'playing': self.bg_playing, 'playing-stopped': self.bg_default, 'disabled': self.bg_disabled, 'error': self.bg_error, 'folder': self.bg_folder, 'hover': self.bg_hover}
    LabelButton:
        text: root.text
        size_hint: 0.9, 1
        text_size: self.size[0], self.text_size[1]
        padding_x: 20
        canvas.before:
            Color:
                rgba: root.bg_color
            Rectangle:
                pos: root.pos
                size: root.size


<MediaRecycleviewBase>:
    scroll_type: ['bars', 'content']
    scroll_wheel_distance: dp(114)
    bar_width: dp(10)
    bar_color: 0.4, 0.4, 0.4, 1
    bar_inactive_color: .4, .4, .4, .7
    bar_background: 0.1, 0.1, 0.1
    data: []
    canvas.before:
        Color:
            rgb: self.bar_background
        Rectangle:
            pos: self.pos[0] + self.width - self.bar_width, self.pos[1]
            size: self.bar_width, self.height
    RecycleBoxLayout:
        id: rvbox
        orientation: 'vertical'
        size_hint: None, None
        height: self.minimum_height
        width: self.parent.width - self.parent.bar_width
        default_size: None, cm(1)
        default_size_hint: 1, None
        spacing: '2dp'
