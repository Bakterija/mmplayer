#: import LabelButton app_modules.widgets_integrated.labelbutton.LabelButton

<MediaButton>:
    bg_color: 0.20, 0.20, 0.40, 1
    bg_hover: 0.5, 0.5, 0.5, 1
    bg_default: 0.20, 0.20, 0.40, 1
    bg_playing: 0.5, 0.15, 0.3, 1
    bg_disabled: 0.2, 0.2, 0.2, 1
    bg_error: 0.1, 0.05, 0.05, 1
    bg_folder: 0.2, 0.2, 0.2, 1
    bg_colors: {'default': self.bg_default, 'playing': self.bg_playing, 'playing-stopped': self.bg_default, 'disabled': self.bg_disabled, 'error': self.bg_error, 'folder': self.bg_folder, 'hover': self.bg_hover}
    font_size: int(self.height * 0.6)
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: root.pos
            size: root.size
    Label:
        size_hint: 0.1, 1
        font_size: root.font_size
        text: str(root.id)

    LabelButton:
        font_size: root.font_size
        text: root.name
        size_hint: 0.9, 1
        text_size: self.size[0], None
        shorten: True
        padding_x: 20


<MediaRecycleviewBase>:
    AppRecycleBoxLayout:
        id: rvbox
        orientation: 'vertical'
        size_hint: None, None
        height: self.minimum_height
        width: self.parent.width - self.parent.bar_width
        default_size: None, rv_default_height
        default_size_hint: 1, None
        spacing: default_spacing
