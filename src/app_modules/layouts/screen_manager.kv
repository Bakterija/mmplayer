#: import VideoFrame app_modules.media_controller.videoframe.VideoFrame
#: import FilterInputBox app_modules.filter_input.FilterInputBox


<Jotube_SM>:

    Screen:
        id: media_screen
        name: 'media'
        StackLayout:
            id: mstack0
            size_hint_y: None
            height: button_height
            y: root.height - button_height
            FilterInputBox:
                id: media_filter_widget
                on_filter_text: app.root_widget.set_media_filter_text(self.filter_text)

        StackLayout:
            id: media_stack
            size_hint_y: None
            height: root.height - button_height

    Screen:
        id: queue_screen
        name: 'queue'
        StackLayout:
            id: queue_stack

    Screen:
        id: video_screen
        name: 'video'
        VideoFrame:
            id: videoframe

    Screen:
        id: browser_screen
        name: 'browser'
        StackLayout:
            id: browser_stack
