#: import VideoFrame app_modules.media_controller.videoframe.VideoFrame
#: import FilterInputBox app_modules.filter_input.FilterInputBox
#: import PluginManager plugin_system.plugin_manager.PluginManager


<Jotube_SM>:

    Screen:
        id: main_screen
        name: 'main'
        canvas.before:
            Color:
                rgb: 0.2, 0.2, 0.25
            Rectangle:
                pos: 0, 0
                size: self.size

        PluginManager:
            id: plugin_manager

        Label:
            text: 'Nothing here yet \nAdd or select a playlist'

    Screen:
        id: media_screen
        name: 'media'
        # StackLayout:
        #     id: mstack0
        #     size_hint_y: None
        #     height: button_height15
        #     y: root.height - self.height
        FilterInputBox:
            id: media_filter_widget
            y: root.height - self.height
            on_filter_text: app.root_widget.set_media_filter_text(self.filter_text)

        StackLayout:
            id: media_stack
            size_hint_y: None
            height: root.height - media_filter_widget.height

    Screen:
        id: queue_screen
        name: 'queue'
        StackLayout:
            id: queue_stack

    Screen:
        id: video_screen
        name: 'video'
        VideoFrame:
            id: videoframe
