#: import VideoFrame app_modules.media_controller.videoframe.VideoFrame
#: import FilterInputBox app_modules.filter_input.FilterInputBox
#: import PluginManager plugin_system.plugin_manager.PluginManager


<Jotube_SM>:

    Screen:
        id: main_screen
        name: 'main'
        PluginManager:
            id: plugin_manager
            canvas.before:
                Color:
                    rgb: 0.2, 0.3, 0.2
                Rectangle:
                    pos: self.pos
                    size: self.size
        # Label:
        #     text: 'Nothing here yet \nAdd or select a playlist'
        #     canvas.before:
        #         Color:
        #             rgb: 0.2, 0.2, 0.25
        #         Rectangle:
        #             pos: self.pos
        #             size: self.size

    Screen:
        id: media_screen
        name: 'media'
        StackLayout:
            id: mstack0
            size_hint_y: None
            height: button_height15
            y: root.height - self.height
            FilterInputBox:
                id: media_filter_widget
                on_filter_text: app.root_widget.set_media_filter_text(self.filter_text)

        StackLayout:
            id: media_stack
            size_hint_y: None
            height: root.height - mstack0.height

    Screen:
        id: queue_screen
        name: 'queue'
        StackLayout:
            id: queue_stack

    Screen:
        id: video_screen
        name: 'video'
        VideoFrame:
            id: videoframe
